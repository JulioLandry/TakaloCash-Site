<script>
  // Gestion coordonnées dépôt
  const methodeSelect = document.getElementById('methode');
  const coordonneesP = document.getElementById('coordonnees');
  methodeSelect.addEventListener('change', () => {
    if(methodeSelect.value === 'mvola'){
      coordonneesP.textContent = "034xxxxxxx - Julio Landry";
    } else if(methodeSelect.value === 'orange'){
      coordonneesP.textContent = "0324923117 - Julio Landry";
    } else if(methodeSelect.value === 'airtel'){
      coordonneesP.textContent = "0331483290 - Julio RANDRIANARIMANANA";
    }
  });

  // Checkbox activation bouton
  const coche = document.getElementById('coche');
  const apercuBtn = document.getElementById('apercu');
  coche.addEventListener('change', () => {
    apercuBtn.disabled = !coche.checked;
  });

  const cocheRetrait = document.getElementById('coche-retrait');
  const apercuRetraitBtn = document.getElementById('apercu-retrait');
  cocheRetrait.addEventListener('change', () => {
    apercuRetraitBtn.disabled = !cocheRetrait.checked;
  });

  // Conversion automatique Ariary -> Crypto (exemple)
  const montantAriaryInput = document.getElementById('montant-ariary');
  const cryptoSelect = document.getElementById('crypto');
  const conversionP = document.getElementById('conversion');
  montantAriaryInput.addEventListener('input', () => {
    let taux = (cryptoSelect.value === 'btc') ? 123000 : 4500; // exemple
    let montantCrypto = montantAriaryInput.value / taux;
    conversionP.textContent = `Équivaut à: ${montantCrypto.toFixed(6)} ${cryptoSelect.value.toUpperCase()} (1 = ${taux} Ar)`;
  });
</script>

